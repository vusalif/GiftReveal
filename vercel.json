{
    "version": 2,
    "builds": [
      {
        "src": "server.js",
        "use": "@vercel/node"
      },
      {
        "src": "public/**",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/styles.css",
        "dest": "/public/styles.css"
      },
      {
        "src": "/themes.css",
        "dest": "/public/themes.css"
      },
      {
        "src": "/gift.css",
        "dest": "/public/gift.css"
      },
      {
        "src": "/script.js",
        "dest": "/public/script.js"
      },
      {
        "src": "/gift.js",
        "dest": "/public/gift.js"
      },
      {
        "handle": "filesystem"
      },
      {
        "src": "/api/(.*)",
        "dest": "/server.js"
      },
      {
        "src": "/(.*)",
        "dest": "/index.html"
      }
    ]
  }